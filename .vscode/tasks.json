{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Find MSBuild",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "if (Test-Path 'C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe') { 'FOUND' } else { 'NOT_FOUND' }"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
      "args": [
        "${workspaceFolder}\\goblin-stream.vcxproj",
        "/p:Configuration=Debug",
        "/p:Platform=x64",
        "/p:RuntimeLibrary=MultiThreadedDebug",
        "/m"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
      "args": [
        "${workspaceFolder}\\goblin-stream.vcxproj",
        "/p:Configuration=Release",
        "/p:Platform=x64",
        "/p:RuntimeLibrary=MultiThreaded",
        "/m"
      ],
      "group": "build",
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Build and Run Debug",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "& 'C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe' '${workspaceFolder}\\goblin-stream.vcxproj' /p:Configuration=Debug /p:Platform=x64 /p:RuntimeLibrary=MultiThreadedDebug /m; if ($LASTEXITCODE -eq 0) { & '${workspaceFolder}\\bin\\Debug\\goblin-stream.exe' }"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
